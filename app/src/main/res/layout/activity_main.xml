<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/logo_top"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="13dp"
            android:layout_gravity="center_vertical|right">
            <ImageView
                android:id="@+id/btn_dlg_my_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src = "@drawable/btn_top1"/>
            <ImageView
                android:id="@+id/btn_call_linegyme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:src = "@drawable/btn_top2"/>
            <ImageView
                android:id="@+id/btn_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:src = "@drawable/icon_log_out"/>
        </LinearLayout>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e1e1e1"/>
    <FrameLayout
        android:id="@+id/layout_main_attend_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center"
        android:background="#ffffff">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:textColor="#313237"
            android:textStyle="bold"
            android:text="이번 달 출석일수는?"/>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:background="@drawable/background_circle_textview_white">
                    <TextView
                        android:id="@+id/tv_attend_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#313237"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/tv_total_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#999999"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:text="/30"
                        />
                </LinearLayout>
                <com.triggertrap.seekarc.SeekArc
                    android:id="@+id/seekArcAttention"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:padding="30dp"
                    app:enabled="false"
                    app:max="100"
                    app:arcWidth="30dp"
                    app:clockwise="true"
                    app:progressWidth="30dp"
                    app:roundEdges="true"
                    app:sweepAngle="360"
                    app:arcColor="#ebebeb"
                    app:progressColor="#2f3136"
                    android:layout_gravity="center"
                    />
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="#f0f0f0"></View>
    <FrameLayout
        android:id="@+id/layout_main_body_point_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center"
        android:background="#ffffff">
        <LinearLayout
            android:id="@+id/layout_body_point_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/tv_title_body_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:textColor="#313237"
                android:textStyle="bold"
                android:text=""/>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/background_circle_textview_white">
                    <TextView
                        android:id="@+id/tv_current_body_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#ed0905"
                        android:textSize="20dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#999999"
                        android:textSize="14dp"
                        android:text="/100"
                        />
                </LinearLayout>
                <com.triggertrap.seekarc.SeekArc
                    android:id="@+id/seekArcBody"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    android:padding="30dp"
                    app:enabled="false"
                    app:max="100"
                    app:arcWidth="30dp"
                    app:clockwise="true"
                    app:progressWidth="30dp"
                    app:roundEdges="true"
                    app:sweepAngle="360"
                    app:arcColor="#ebebeb"
                    app:progressColor="#ed0905"
                    android:layout_gravity="center"
                    />

            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_inbody_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#000000"
                android:gravity="center_horizontal"
                android:text="이번달 인바디 정보가 없네요.\n이번달 인바디를 측정해보세요."/>

        </LinearLayout>
    </FrameLayout>
</LinearLayout>
